import doxygen ;
import quickbook ;
import boostbook : boostbook ;

doxygen reference
:
  ../include/boost/histogram.hpp
  [ glob ../include/boost/histogram/*.hpp ]
  [ glob ../include/boost/histogram/accumulators/*.hpp ]
  [ glob ../include/boost/histogram/algorithm/*.hpp ]
  [ glob ../include/boost/histogram/axis/*.hpp ]
:
  <doxygen:param>"PREDEFINED=\"BOOST_HISTOGRAM_DOXYGEN_INVOKED\" \\
                             \"BOOST_HISTOGRAM_DETAIL_NODISCARD\" \\
                             "
  <doxygen:param>EXTRACT_ALL=YES
  <doxygen:param>HIDE_FRIEND_COMPOUNDS=YES
  <doxygen:param>ENABLE_PREPROCESSING=YES
  <doxygen:param>MACRO_EXPANSION=YES
  <doxygen:param>JAVADOC_AUTOBRIEF=YES
  <doxygen:param>USE_MATHJAX=NO
  <doxygen:param>SEARCH_INCLUDES=YES
  <doxygen:param>"EXCLUDE=\"../include/boost/histogram/fwd.hpp\" \\
                          \"../include/boost/histogram/ostream.hpp\" \\
                          \"../include/boost/histogram/axis/ostream.hpp\" \\
                          \"../include/boost/histogram/accumulators/ostream.hpp\" \\
                          "
  <doxygen:param>EXCLUDE_SYMBOLS=detail
  <doxygen:param>WARNINGS=YES
  <doxygen:param>WARN_IF_DOC_ERROR=YES
;

boostbook histogram
:
  histogram.qbk
:
  <dependency>reference
# for the final product
#  <format>html:<xsl:param>boost.root=../../../..
# for now keep links to local resources so it works on gh-pages
  <xsl:param>boost.root=../..
  <xsl:param>boost.image.src=../src/images/boost.png
# rest is the same either way
  <xsl:param>boost.libraries=../../../libraries.htm
  <xsl:param>boost.mathjax=1
  <xsl:param>chunk.first.sections=1
  <xsl:param>generate.section.toc.level=1
  <xsl:param>generate.toc="chapter nop section nop"
;
